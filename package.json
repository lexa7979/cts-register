{
	"name": "cts-next-gen",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"font-awesome": "^4.7.0",
		"mongodb": "^3.3.2",
		"node-sass": "^4.12.0",
		"react": "^16.10.2",
		"react-dom": "^16.10.2",
		"react-scripts": "3.1.2"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test --reporters=jest-spec-reporter",
		"test:update": "react-scripts test -u",
		"eject": "react-scripts eject",
		"lint": "eslint **/*.js",
		"local-link:eslint": "npm link @lexa79/eslint-config",
		"db:docker:start": "docker-compose up -d",
		"db:docker:ps": "docker-compose ps",
		"db:docker:logs": "docker-compose logs -f -t",
		"db:docker:inspect": "docker-compose exec database /bin/sh -c \"cd /data/db; /bin/bash\"",
		"db:docker:stop": "docker-compose down",
		"db:docker:clear": "docker-compose down -v"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@lexa79/eslint-config": "^1.0.2",
		"@lexa79/jest-matchers": "^1.0.2",
		"enzyme": "^3.10.0",
		"enzyme-adapter-react-16": "^1.15.1",
		"enzyme-to-json": "^3.4.2",
		"eslint": "^6.5.1",
		"eslint-plugin-jest": "^22.17.0",
		"eslint-plugin-react": "^7.16.0",
		"jest-spec-reporter": "^1.0.8",
		"prettier": "^1.18.2"
	}
}
